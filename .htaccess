Options +FollowSymlinks -Indexes

# Reecriture url
RewriteEngine On

RewriteRule ^nuit-info-2013/index.html$ nuit-info-2013/index.php [QSA,L]
RewriteCond %{REQUEST_URI} !(index) [NC]
RewriteRule ^([a-z0-9A-Z_]+)\.(php|html)$ /nuit-info-2013/index.php?page=$1 [QSA,L]
RewriteRule ^([a-z0-9A-Z_]+)-([0-9]+)\.(php|html)$ /nuit-info-2013/index.php?page=$1&n=$2 [QSA,L]
RewriteRule ^([a-z0-9A-Z_]+)$ /nuit-info-2013/index.php?page=$1 [QSA,L]
RewriteRule ^([a-z0-9A-Z_]+)-([0-9]+)$ /nuit-info-2013/index.php?page=$1&n=$2 [QSA,L]

# Gestion des erreurs
ErrorDocument 401 /nuit-info-2013/errors/401.php
ErrorDocument 403 /nuit-info-2013/errors/403.php
ErrorDocument 404 /nuit-info-2013/errors/404.php
ErrorDocument 401 /nuit-info-2013/errors/410.php
ErrorDocument 500 /nuit-info-2013/errors/500.php
